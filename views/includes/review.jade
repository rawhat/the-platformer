.reviews-area
	if reviews != null
		- each review in reviews
			- var platform = review.platform.toUpperCase();
			.panel.panel-default.review-item(id="#{review.reviewId}")
				.panel-heading.clearfix
					h1.pull-left.
						#{review.title}
					.pull-right.review-header-right
						p.
							#{review.game} -- #{platform}
						p
							.rating-bar
								script.
									$('.rating-bar').progressbar({
										value: #{review.rating} * 20,
									}).children('.ui-progressbar-value').html(#{review.rating}*20 + '%').css('display', 'block');
				.well.review-snippet.
					#{review.snippet}
				.full-review(hidden)
					p
						#{review.content}
				.panel-footer.clearfix
					p.pull-left
						reviewed by <a href="/profile/#{review.reviewer}">#{review.reviewer}</a>
					p.pull-right
						if review.editable
							<a href="/reviews/#{review.reviewId}/edit" class="review-edit"> <img src="/img/png/glyphicons-151-edit.png" /></a>