- var postDate = new Date(0);
- postDate.setUTCSeconds(post.postCreated);
- postDate = postDate.toLocaleString();
.user-post(id="#{post.postid}")
	.top-bar.clearfix
		p.pull-left
			<a href="/profile/#{post.poster}/" class="username">#{post.poster}</a> posted:
		p.pull-right
			if post.editable
				<a href="/posts/#{post.postid}/edit" class="post-edit"> <img src="/img/png/glyphicons-151-edit.png" /></a>
	.panel.panel-default
		.panel-body
			p.post-body
				| #{post.postContent}
		.panel-footer
			p.pull-left #{postDate} 
			p.pull-right
				| <a href="" class="show-post-likers">#{post.postLikes}</a> 
				img(src="/img/png/glyphicons-344-thumbs-up.png", class="like-icon") 
			.clearfix