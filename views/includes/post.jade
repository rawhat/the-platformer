block content
	- if (locals.query)
		.well
			p.
				#{query}
	- each post in posts
		- var postDate = new Date(0);
		- postDate.setUTCSeconds(post.created);
		- postDate = postDate.toLocaleString();
		.user-post.well(id="#{post.postid}")
			p
				| #{post.poster} posted:
			.panel.panel-default
				.panel-body
					p
						| #{post.content}
				.panel-footer
					p
						| #{postDate}
			textarea(name="comment-box")
			button.btn.btn-default(class="post-comment") Comment